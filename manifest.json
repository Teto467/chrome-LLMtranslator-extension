{
  "manifest_version": 3,
  "name": "AIチャット翻訳",
  "version": "2.0",
  "description": "選択したテキストを複数のAIサービス（ChatGPT, Gemini, Claudeなど）を使って翻訳します。",
  "permissions": [
    "contextMenus",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "options_page": "options.html",
  "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png"
    },
    "default_title": "AIチャット翻訳"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; style-src 'self'; object-src 'self'"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
